// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repository {
  id            String   @id @default(cuid())
  githubId      Int      @unique
  name          String
  fullName      String   @unique
  description   String?
  defaultBranch String   @default("main")
  healthScore   Float?
  installationId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  installation  Installation? @relation(fields: [installationId], references: [id])
  pullRequests  PullRequest[]
  healthChecks  RepoHealthCheck[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Installation {
  id                  String   @id @default(cuid())
  githubId            Int      @unique
  accountName         String
  accountAvatar       String?
  appId               Int
  targetId            Int
  targetType          String // Organization or User
  repositorySelection String // all or selected
  permissions         Json
  events              String[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  repositories Repository[]
}

model PullRequest {
  id            String   @id @default(cuid())
  prNumber      Int
  title         String
  author        String
  repositoryId  String
  status        String   @default("open") // open | closed | merged
  riskLevel     String?  // low | medium | high
  riskScore     Float?   // 0-100
  aiConfidence  Float?   // 0-1
  filesChanged  Int      @default(0)
  additions     Int      @default(0)
  deletions     Int      @default(0)
  persona       String   @default("default") // default | security | cto | performance | roast
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  repository    Repository @relation(fields: [repositoryId], references: [id])
  issues        PRIssue[]
  reviews       PRReview[]

  @@unique([repositoryId, prNumber])
}

model PRIssue {
  id           String   @id @default(cuid())
  pullRequestId String
  severity     String   // critical | high | medium | low | info
  category     String   // security | performance | logic | style | maintainability
  title        String
  description  String
  filePath     String?
  lineNumber   Int?
  suggestion   String?
  ruleId       String?
  createdAt    DateTime @default(now())

  pullRequest  PullRequest @relation(fields: [pullRequestId], references: [id])
}

model PRReview {
  id            String   @id @default(cuid())
  pullRequestId String
  summary       String
  persona       String
  postedToGithub Boolean @default(false)
  githubCommentId Int?
  createdAt     DateTime @default(now())

  pullRequest   PullRequest @relation(fields: [pullRequestId], references: [id])
}

model RepoHealthCheck {
  id             String   @id @default(cuid())
  repositoryId   String
  overallScore   Float
  codeQuality    Float
  securityRisk   Float
  maintainability Float
  testCoverage   Float
  performanceRisk Float
  notes          String?
  createdAt      DateTime @default(now())

  repository     Repository @relation(fields: [repositoryId], references: [id])
}
